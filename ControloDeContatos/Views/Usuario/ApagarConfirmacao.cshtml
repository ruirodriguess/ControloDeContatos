@model UsuarioModel

@{
    ViewData["Title"] = "Confirmação de apagar usuário";
}

<div class="text-center">
    <h3>Realmente deseja apagr o usário (@Model.Nome)?</h3> 
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Usuario" asp-action="Index">Cancelar</a>
<a class="btn btn-primary btn-block" role="button" asp-controller="Usuario" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>
