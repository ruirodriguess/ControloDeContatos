@model List<ContatoModel>

<table id="tabela-contatos-usuario" class="table">

    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Telefone</th>
        </tr>
    </thead>

    <tbody>
        @if(Model != null && Model.Any())
        {
            foreach (var contato in Model)
            {
                <tr>
                    <th scope="row">@contato.Id</th>
                    <td>@contato.Nome</td>
                    <td>@contato.Email</td>
                    <td>@contato.Celular</td>
                </tr>
            }
        }
        else
        {
            <tr class="add"><td valign="top" colspan="4">Nenhum contato encontrato</td></tr>
        }

    </tbody>

</table>


